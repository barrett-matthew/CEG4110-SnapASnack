<?xml version="1.0" encoding="utf-8"?>

<!--< These are the user posts that will populate the Comment Section />-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profilePictureCell"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/profilePictureCell"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userCommentCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5" />

        <TextView
            android:id="@+id/userPostedAtCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userCommentCell" />

    </LinearLayout>
</RelativeLayout>