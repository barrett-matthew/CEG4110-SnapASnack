<?xml version="1.0" encoding="utf-8"?>

<!--< Snap a' Snack's Upload Results. This view will be populated by upload_results_cell(s). This view is invoked after the user uploads an Image />-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.UploadResultsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/resultsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/togalleryview"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:text="@string/main_menu_btn_gallery"
            android:drawableLeft="@drawable/ic_gallery"
            android:drawablePadding="35dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:gravity="left|center_vertical"
            android:textStyle="bold"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/backtomainmenu2"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_main_menu"
            android:drawablePadding="35dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="@string/main_menu"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>